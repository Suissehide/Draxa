{% extends 'base.html.twig' %}

{% block title %}Infos{% endblock %}

{% block body %}
    <h1>Infos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ info.date ? info.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ info.type }}</td>
            </tr>
            <tr>
                <th>Accompagnant</th>
                <td>{{ info.accompagnant }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ info.etat }}</td>
            </tr>
            <tr>
                <th>MotifRefus</th>
                <td>{{ info.motifRefus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('infos_index') }}">back to list</a>

    <a href="{{ path('infos_edit', {'id': info.id}) }}">edit</a>

    {{ include('infos/_delete_form.html.twig') }}
{% endblock %}
