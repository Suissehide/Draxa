                    <thead>
                        <tr>
                            <th data-column-id="slot_horaire" data-width="10%" onclick="sortTable('educatives', 0)">Horaire</th>
                            <th data-column-id="slot_thematique" data-width="20%" onclick="sortTable('educatives', 1)">Thématique</th>
