{% block javascripts %}
    <script src="{{ asset('js/select2.min.js') }}"></script>

    <script>
        var thematiques = {{ thematiques|json_encode|raw }};

        var dateSelected = localStorage.getItem('dateSelected') ? localStorage.getItem('dateSelected') : moment(new Date()).format('DD/MM/YYYY');
        var categorie = 'Consultation';

        var options = {
            selectedDateFormat: 'DD/MM/YYYY',
            selectedDate: dateSelected,
            onSelectedDateChanged: function (event, date) {
                dateSelected = moment(date).format('DD/MM/YYYY');
                localStorage.setItem('dateSelected', dateSelected);
                ajaxAction(dateSelected);
            },
            language: 'fr',
            showCalendar: true
        }
        $('#paginator').datepaginator(options);

        {#  SELECT2  #}
        function matchCustom(params, data) {
            if ($.trim(params.term) === '') {
                return data;
            }

            if (typeof data.text === 'undefined') {
                return null;
            }

            if (data.text.toLowerCase().indexOf(params.term.toLowerCase()) > -1) {
                return $.extend({}, data, true);
            }
            return null;
        }

        $(".js-patient").select2({
            multiple: false,
            matcher: matchCustom,
        });

        {#    #}
        const anchorList = ['consultations', 'entretiens', 'coachings', 'ateliers', 'educatives'];

        function ajaxAction(d) {
            $.ajax({
                    url: "{{ path('accueil') }}",
                    type: "POST",
                    dataType: "json",
                    data: {
                        "date": d
                    },
                    success: function (res) {
                        const emptyPhraseList = ['Aucune consultation', 'Aucun entretien', 'Aucun coaching PRM', 'Aucun atelier', 'Aucune semaine éducative'];
                        $(".box tbody tr").remove();
                        for (let i = 0; i < res.length; i++) {
                            if (res[i].length > 0) {
                                $.each(res[i], function (index, val) {
                                    $('<tr data-row-id=' + val.id + ' class="text-left">')
                                    .append(
                                        `<td class="horaire">` + val.horaire + `</td>
                                        <td class="thematique">` + val.thematique + `</td>
                                        <td>` + val.location + `</td>
                                        <td>` + val.soignant + `</td>
                                        <td>` + displayPatient(val.patients, val.place) + `</td>
                                        <td>` + displayPatientType(val.patients) + `</td>
                                        <td>` + displayPatientActions(val.patients) + `</td>`
                                    )
                                    .appendTo('#' + anchorList[i]);
                                });
                            } else {
                                $('<tr class="disabled text-center">')
                                .append('<td colspan="7">' + emptyPhraseList[i] + '</td>')
                                .appendTo('#' + anchorList[i]);
                            }
                        }
                        updateWidth();
                    }
                });
        }
        ajaxAction(dateSelected);

        /*
        ============================================================================== */

        var $table = $('table'),
            $headCells = $('table:first thead tr').children(),
            headWidth;

        // Get the tbody columns width array
        headWidth = $headCells.map(function() {
            return $(this).data('width');
        }).get();

        // Set the width of thead columns
        function updateWidth() {
            $table.find('tbody tr').each(function(i, v) {
                $(v).children().each(function(j, s) {
                    $(s).width(headWidth[j]);
                });
            });
        }
        updateWidth();

        function displayPatient(data, place) {
            let label = '';
            label += '<div class="user-list" data-place="' + place + '">';
            if (data.length !== 0) {
                data.forEach(function(e, v) {
                    let theraflow = e.theraflow ? ' theraflow' : '';
                    let progetp = e.progetp === 'ViVa module AOMI' ? ' progetp' : '';
                    label += `
                        <div class="user-label" data-id="` + e.rendezVousId + `">
                            <div class="user-name` + theraflow + progetp + `">` + e.prenom + ` ` + e.nom + `</div>
                        </div>
                    `;
                });
            }
            if (data.length < parseInt(place))
                label += '<button class="js-addPatient"><i class="glyphicon glyphicon-plus"></i></button>';
            label += '</div>';
            return label;
        }

        function displayPatientType(data) {
            let label = '<ul class="type-list">';
            if (data.length !== 0) {
                data.forEach(function(e, v) {
                    label += `
                        <li>` + e.type + `</div>
                    `;
                });
            }
            label += '</ul>';
            return label;
        }

        function displayPatientActions(data) {
            let label = '<div class="actions-list">';
            if (data.length !== 0) {
                data.forEach(function(e, v) {
                    let checked = (e.send === 'Oui' ? 'checked' : '');
                    let notes = (e.notes ?
                    `<button class="js-comment tooltip2" data-tooltip="` + e.notes.replace(/"/g, "'") + `" data-position="top" class="top"><i class="glyphicon glyphicon-paperclip"></i></button>` : ``);

                    let venu = "<div class=\"pastille white\"></div>";
                    if (e.venu === 'Oui')
                        venu = "<div class=\"pastille hotpink\"></div>";
                    else if (e.venu === 'Non')
                        venu = "<div class=\"pastille gold\"></div>";
                    
                    label += `
                        <div class="user-send" data-id="` + e.rendezVousId + `">
                            <input class="inp-cbx" id="` + e.rendezVousId + `" type="checkbox" ` + checked + `/>
                            <label class="cbx" for="` + e.rendezVousId + `"></label>
                            <button class="js-removePatient" data-id="` + e.patientId + `"><i class="glyphicon glyphicon-minus"></i></button>
                            <button class="js-redirect" data-id="` + e.patientId + `"><i class="glyphicon glyphicon-pencil"></i></button>
                            ` + venu + `
                            ` + notes + `
                        </div>
                    `;
                });
            }
            label += '</div>';
            return label;
        }

        $('tbody ').on('click', '.inp-cbx', function(e) {
            e.stopPropagation();

            let id = $(this).attr('id');
            let send = $(this).is(":checked") ? 'Oui': 'Non';
            $.ajax({
                url: "{{ path('rendezVous_send') }}",
                type: "POST",
                dataType: "json",
                data: {
                    id: id,
                    send: send
                },
                success: function (res) {
                    // console.log(res);
                }
            });
        })

        /* 
        ============================================================================== */

        $('tbody').on('click', '.js-redirect', function() {
            let isBox = $(this).parents('table').is('#rdv-grid') ? false : true;
            let index, pastille;
            if (isBox)
                index = $(this).parents('.box').index();
            else
                pastille = $(this).parents('tr').find('td:first-child .pastille');
            redirectToPatient($(this).attr('data-id'), isBox, index, pastille);
        });

        function redirectToPatient(patientId, isBox, index, pastille) {
            let anchor = "";
            if (!isBox) {
                if (pastille.hasClass('seagreen'))
                    anchor = 'consultations';
                else if (pastille.hasClass('rebeccapurple'))
                    anchor = 'entretiens';
                else if (pastille.hasClass('chocolate'))
                    anchor = 'ateliers';
                else if (pastille.hasClass('royalblue'))
                    anchor = 'educatives';
                else if (pastille.hasClass('goldenrod'))
                    anchor = 'coachings';
            } else {
                anchor = anchorList[index];
            }
            $.ajax({
                url: "{{ path('redirect_vue_patient') }}",
                type: "POST",
                dataType: "json",
                data: {
                    id: patientId,
                    anchor: anchor
                },
                success: function (res) {
                    window.location.href = res;
                }
            });
        }

        $('tbody').on('click', '.js-addPatient', function() {
            let id = $(this).closest('tr').attr('data-row-id');
            let len = $(this).closest('.user-list').find('.user-label').length;
            let place = $(this).closest('.user-list').attr('data-place');
            $('#patientAdd').attr('data-id', id);
            $('#patientAdd').attr('data-place', parseInt(place) - parseInt(len));
            $('#addPatient').modal('show');

            $('.js-hide').show();
            let index = 0;

            let tableParent = $(this).parents('table');
            if (tableParent.is('#rdv-grid')) {
                if ($(this).parents('tr').find('.pastille').hasClass('rebeccapurple')) index = 1;
                if ($(this).parents('tr').find('.pastille').hasClass('chocolate')) index = 2;
                if ($(this).parents('tr').find('.pastille').hasClass('goldenrod')) index = 3;
                if ($(this).parents('tr').find('.pastille').hasClass('royalblue')) $('.js-hide').hide();
            } else {
                if (tableParent.is('#entretiens')) index = 1;
                if (tableParent.is('#ateliers')) index = 2;
                if (tableParent.is('#coachings')) index = 3;
                if (tableParent.is('#educatives')) $('.js-hide').hide();
            }

            $('#add_patient_thematique').empty().append('<option value=""></option>');
            $.each(thematiques[index], function(key, value) {
                $('#add_patient_thematique')
                    .append($("<option></option>")
                    .attr("value", value)
                    .text(value));
            });
            let selected = $(this).parents('tr').find('.thematique').text();
            $('#add_patient_thematique option[value="' + selected + '"]').prop('selected', true);
            $('#add_patient_type option[value=""]').prop('selected', true);
        });

        $('#patientAdd').on('click', function() {
            let slotId = $(this).attr('data-id');
            let tr = $('tbody tr[data-row-id="' + slotId + '"]');
            let patientId = $('#add_patient_rendezVous').val();
            let thematique = $('#add_patient_thematique').val();
            let type = $('#add_patient_type').val();
            let place = $(this).attr('data-place');

            $.ajax({
                url: "{{ path('add_patient_slot') }}",
                type: "POST",
                dataType: "json",
                data: {
                    patientId: patientId,
                    slotId: slotId,
                    thematique: thematique,
                    type:  type
                },
                success: function (res) {
                    if (res) {
                        ajaxAction(dateSelected);
                        $("#rdv-grid").bootgrid('reload');
                        successAlert('Succès: patient ajouté !');
                    } else {
                        errorAlert('Erreur: ce patient est déjà inscrit !');
                    }
                },
            });
        })

        $('tbody').on('click', '.js-removePatient', function() {
            let patientId = $(this).attr('data-id');
            let isBox = $(this).parents('table').is('#rdv-grid') ? false : true;
            let index, pastille;
            if (isBox)
                index = $(this).parents('.box').index();
            else
                pastille = $(this).parents('tr').find('td:first-child .pastille');

            let rendezVousId = $(this).closest('.user-send').attr('data-id');
            let slotId = $(this).closest('tr').attr('data-row-id');
            $.ajax({
                url: "{{ path('remove_patient_slot') }}",
                type: "POST",
                dataType: "json",
                data: {
                    rendezVousId: rendezVousId,
                    slotId: slotId,
                },
                success: function (res) {
                    ajaxAction(dateSelected);
                    $("#rdv-grid").bootgrid('reload');
                    successAlert('Succès: patient supprimé !');
                    redirectToPatient(patientId, isBox, index, pastille);
                }
            });
        });

        $('tbody').on('click', function() {
            categorie = 'Consultation';
            if ($(this).closest('table').is("#entretiens"))
                categorie = 'Entretien';
            else if ($(this).closest('table').is("#ateliers"))
                categorie = 'Atelier';
        });


        /* RDV
        ============================================================================== */

        $('.input-daterange').datepicker({
            language: 'fr',
            format: 'dd/mm/yyyy',
            todayBtn: true,
            todayHighlight: false,
            autoclose: false
        });

        $('#dateDebut').datepicker('setDate', new Date());
        let endDate = moment().endOf('year').format('DD/MM/YYYY');
        $('#dateFin').datepicker('setDate', endDate);
        $('.input-daterange input').datepicker('update');

        var categories = [];
        $('.lnb-item label').click(function() {
            let checkbox = $(this).find("input[type='checkbox']");
            if (checkbox.prop('checked')) {
                checkbox.prop('checked', false);
                $(this).find('span').css('background-color', 'transparent');
