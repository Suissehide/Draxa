                            <th data-column-id="patient_nom" data-width="40%">Nom</th>
                            <th data-column-id="patient_prenom" data-width="40%">Prénom</th>
                            <th data-column-id="rdv_type" data-width="20%">Type</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="box">
                <div class="box-header">Prochains
                    <b>BCVs</b>
                </div>
                <table id="bcvs" class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th data-column-id="patient_nom" data-width="40%">Nom</th>
                            <th data-column-id="patient_prenom" data-width="40%">Prénom</th>
                            <th data-column-id="rdv_type" data-width="20%">Permission</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="box">
                <div class="box-header">Prochaines
                    <b>consultations</b>
                </div>
                <table id="rendezVous" class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th data-column-id="patient_nom" data-width="20%">Nom</th>
                            <th data-column-id="patient_prenom" data-width="20%">Prénom</th>
                            <th data-column-id="rdv_type" data-width="15%">Type</th>
